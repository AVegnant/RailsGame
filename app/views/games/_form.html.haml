= form_for @game do |f|
  - if @game.errors.any?
    #error_explanation
      %h2= "#{pluralize(@game.errors.count, "error")} prohibited this game from being saved:"
      %ul
        - @game.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description, style: "width:35%; height:200px; max-width: 35%; max-height: 100px", class: "form-control"
  .field
    = f.label :platform
    = f.text_field :platform
  .actions
    = f.submit 'Save'
