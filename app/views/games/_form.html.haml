= form_for @game do |f|
  - if @game.errors.any?
    #error_explanation
      %h2= "#{pluralize(@game.errors.count, "error")} prohibited this game from being saved:"
      %ul
        - @game.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :tournament_id
    = f.number_field :tournament_id
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :platform
    = f.text_field :platform
  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
