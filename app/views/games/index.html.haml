%h1 Listing games

%table.table.table-bordered.table-hover
  %tr
    %th Name
    %th Description
    %th Platform
    %th
    %th
    %th

  - @games.each do |game|
    %tr
      %td= game.name
      %td= game.description
      %td= game.platform
      %td= link_to 'Show', game
      %td= link_to 'Edit', edit_game_path(game)
      %td= link_to 'Destroy', game, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Game', new_game_path, class: "btn btn-default"
