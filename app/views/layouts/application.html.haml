!!!

%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title RAILS GAME
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    
  %body
    %nav.navbar.navbar-default{:role => "navigation"}
      .container-fluid
        .navbar-header
          %a.navbar-brand{:href => "/home"} RailsGame.com
        %ul.nav.navbar-nav
          %li
            %a{:href => "/tournaments"} Tournaments List
          %li
            %a{:href => "/games"} Games List
          %li
            %a{:href => "/users"} Users
      
        %ul.nav.navbar-form.navbar-right{:role => "search"}
          .form-group
            %input.form-control{:placeholder => "Search", :style => "width:300px", :type => "text"}
              %button.btn.btn-default{:type => "submit"} Submit
              - if !user_signed_in?
                = link_to "Sign In", new_user_session_path, class: "btn btn-default"
              - else
                = link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-danger"
              %span.glyphicon.glyphicon-user
    .container
      = yield
       